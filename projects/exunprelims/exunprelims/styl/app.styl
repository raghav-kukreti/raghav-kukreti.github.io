#nav-wrapper {
  position: fixed;
  top: 20px;
  left: 20px;
  z-index: 50; }

#nav-inner div {
  border: 1px solid rgba(105, 105, 105, 0.5);
  color: rgba(#fff, 0.8);
  background: #111;
  text-align: center;
  padding: 17px;
  height: 50px; }

#nav-inner div, #nav-inner li {
  width: 150px;
  margin: 1px 0;
  cursor: pointer; }

#nav-inner ul {
  overflow: hidden; }

ol, ul {
  list-style: none; }

#nav-inner li {
  -webkit-transition: left .2s;
  transition: left .2s;
  color: rgba(#fff, 0.9);
  background: rgba(#000, 0.95);
  position: relative;
  font-weight: bold;
  padding: 10px 17px;
  height: 35px;
  left: -150px; }
  #nav-inner li a {
    color: rgba(#fff, 0.9); }
    #nav-inner li a:hover {
      border: none; }

#nav-inner div:hover, #nav-inner li:hover {
  background: rgba(#666, 0.8);
}

