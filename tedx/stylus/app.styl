$prim = #e62b1e
$font-stack = "ApercuRegular", Helvetica, Helvetica Neue, Arial, sans-serif;
@font-face {
	font-family ApercuRegular
	src : url(../fonts/apercu-reg.ttf);
}
*,
*::after,
*::before
	box-sizing border-box
	transition all 0.35s ease-in-out
	margin: 0;
	padding: 0;
	text-rendering optimizeLegibility
	
	border: 0;
	outline: 0;
	-webkit-font-smoothing antialiased !important
	font-size: 100%;
	background: rgba(0, 0, 0, 0);

body
	position relative
	background #F1F0EE
	font-family Arial
	color #333332
	line-height 1.55

.hero
	display table
	width 100%
	height 100vh
	background url(../img/bg.jpg) center center no-repeat fixed
	background-size cover
	.centered
		display table-cell
		vertical-align middle
		text-align center
		height 100vh
		background rgba(#000, 0.66)
		
		h1
			font-size 4.8rem
			line-height 0.56
			font-stretch ultra-expanded
			.red
				letter-spacing -2px
				font-weight 800
				color $prim
				sup
					font-size 0.68em
			.place
				color #fff
				font-weight 300
				letter-spacing -1px
		
		h2
			font-size 1rem
			color #fff
			margin-top 40px
			font-weight 700
			span
				color $prim
.pl
	color #fff
	margin-top 100px
	font-size 2.16rem
	font-weight 300
	letter-spacing -1px

.about
	height 100vh
	padding 7em 0
	background #fff
	h1
		font-family: $font-stack;
		font-size: 2em;
		line-height: 1.4em;
		margin: 0;
		padding: 0 0 25px 0;
		font-weight: normal;
	h2
		font-family $font-stack;
		font-weight normal
// Helper classes
.delay-small
	animation-delay 0.24s

.delay-medium
	animation-delay 0.58s

.wrapper
	display block
	float left
	width 100%
	
.central
	display block
	margin 0 auto
	
.left-spacer
	padding-left 100px
	padding-right 88px
	
.content--block
	display block
	max-width 39em
	margin 0 auto
	
.button
	text-align: center;
	display: block;
	width: 224px;
	font-family $font-stack
	border: 1px solid #333332;
	color #333332
	padding: 20px;
	margin-top 40px
	text-transform: uppercase;
	-moz-box-shadow: 4px 4px 0px 0px rgba(51, 51, 50, 1);
	-webkit-box-shadow: 4px 4px 0px 0px #333332;
	box-shadow: 4px 4px 0px 0px #333332;
	-webkit-transition: all 0.1s cubic-bezier(0, 0, 0.25, 1);
	-moz-transition: all 0.1s cubic-bezier(0, 0, 0.25, 1);
	-o-transition: all 0.1s cubic-bezier(0, 0, 0.25, 1);
	-ms-transition: all 0.1s linear;
	transition: all 0.1s cubic-bezier(0, 0, 0.25, 1);
	&:hover
		border: 1px solid rgba(51, 51, 50, .5);
		margin: 43px 3px;
		-moz-box-shadow: 0px 0px 0px 0px rgba(51, 51, 50, .5);
		-webkit-box-shadow: 0px 0px 0px 0px rgba(51, 51, 50, .5);
		box-shadow: 0px 0px 0px 0px rgba(51, 51, 50, .5);
a
	text-decoration none


nav.main-nav {
	z-index 2000
	position fixed
	width: 100%;
	height: 90px;
	border-bottom 1px solid rgba(#000, 0.16)
	background: #FFF;
}

.inner {
	width: 1000px;
	margin: 0 auto;
}

nav.main-nav .inner {
	position: relative;
	padding-left: 260px;
	// padding-right: 30px;
}

nav.main-nav figure.logo {
	position: absolute;
	top: 23px;
	left: 0;
	width: 250px;
	height: 50px;
	text-indent: -9999px;
	background: url('../img/logo.png') no-repeat;
}

nav.main-nav ul {
	overflow: visible;
	float: right;
	height: 90px;
	padding-top: 30px;
}

ul.inline {
	overflow: hidden;
	padding: 0;
	margin: 0;
	list-style: none;
}

nav.main-nav ul li 
	position: relative;
	font-weight 700
	text-transform lowercase	
	margin-right: 30px;

		
ul.inline li {
	float: left;
	display: inline-block;
}

.menu-item > a
	font-size: 18px;
	color: #333332;
	padding-bottom 6px
	text-transform: lowercase;
	border-bottom 2px solid rgba($prim, 0)
	
	&:hover
		border-bottom 2px solid $prim
		

.gutter
	padding-bottom 55px
	
.col-4
	display block
	width 50%
	float left
	
.cont-block
	padding-right 12px

.image-grid
	padding-bottom 12px
	
.thumb-post
	position: relative;
	display: block;
	
	a
		display block
		border none
		

